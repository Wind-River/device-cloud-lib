include ../${IOT_MAKE_FILE}

SRCS = ${SRCS}
OBJS = $(SRCS:.c=${CMAKE_C_OUTPUT_EXTENSION})
override CFLAGS += -I"$(IOT_INCLUDE_DIR)" -Werror ${CFLAGS}
override LDFLAGS += -L"$(IOT_LIB_DIR)" ${LDFLAGS}
LIBS = -l${IOT_LIBRARY}

ifdef COMSPEC
	RM ?= del
else
	RM ?= rm -f
endif

all: @TARGET@

${TARGET}: $(OBJS)
	$(CC) $^ $(CFLAGS) -o "$@" $(LDFLAGS) $(LIBS)

%${CMAKE_C_OUTPUT_EXTENSION}: %.c
	$(CC) -c -o "$@" $(CFLAGS) "$<"

.PHONY: clean
clean:
	@$(RM) ${TARGET} $(OBJS)

